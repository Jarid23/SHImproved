
@{
    ViewBag.Title = "Contact";
}

<h2>Contact</h2>

<div class="col-xs-6"
     @using (Html.BeginForm())
     {
         <div>
             <h4>Name</h4>
             @Html.TextBoxFor(m => m.Name, new { @class ="form-group"})
             @Html.ValidationMessage(m => m.Name)
         </div>
         <div>
             <h4>Email</h4>
             @Html.TextBoxFor(m => m.Email, new { @class = "form-group" })
             @Html.ValidationMessage(m => m.Email)
         </div>
         <div>
             <h4>Phone</h4>
             @Html.TextBoxFor(m => m.Phone, new { @class = "form-group" })            
         </div>
         <div>
             <h4>Message</h4>
             @Html.TextBoxFor(m => m.Message, new { @class = "form-group" })
             @Html.ValidationMessage(m => m.Message)
         </div>
         <div>
             <button class="btn btn-default" type="submit">Submit</button>
         </div>
     }
</div>

