@model CarDealership.Models.UserVM

@{
    ViewBag.Title = "EditUser";
}

<h2>Edit User</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3">
                <h4>First Name</h4>
                @Html.TextAreaFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                <h4>Last Name</h4>
                @Html.TextAreaFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                <h4>Email</h4>
                @Html.TextAreaFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                <h4>Role</h4>
                @Html.TextAreaFor(m => m.Role, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                <h3>Password</h3>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                <h4>Confirm Password</h4>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="row cole-xs-12">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
}
