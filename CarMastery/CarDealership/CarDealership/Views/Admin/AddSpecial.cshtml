@model CarDealership.Models.SpecialVM

@{
    ViewBag.Title = "AddSpecial";
}

<h2>AddSpecial</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12">
                Title @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            </div>
            <div class="col-xs-12">
                Description @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            </div>
            <div class="col-xs-12">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
    </div>
}

<div class="row" id="specialarea">

</div>
