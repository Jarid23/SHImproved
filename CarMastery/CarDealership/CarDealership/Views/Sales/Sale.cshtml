@model CarDealership.Models.SaleVM

@{
    ViewBag.Title = "Sale";
}

<h2>Sale</h2>

<div id="cararea">

</div>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.CarId)
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3">
                <h4>Name</h4>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-group" })
            </div>
            <div class="col-xs-3">
                <h4>Phone</h4>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-group" })
            </div>
        </div>
        <div class="col-xs-12">
            <h4>Email</h4>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-group" })
        </div>
        <div class="row">
            <div class="col-xs-3">
                <h4>Street 1</h4>
                @Html.TextBoxFor(m => m.Street1, new { @class = "form-group" })
            </div>
            <div class="col-xs-3">
                <h4>Street 2</h4>
                @Html.TextBoxFor(m => m.Street2, new { @class = "form-group" })
            </div>
        </div>
        <div class="col-xs-3">
            <h4>City</h4>
            @Html.TextBoxFor(m => m.City, new { @class = "form-group" })
        </div>
        <div class="col-xs-3">
            <h4>State</h4>
            @Html.TextBoxFor(m => m.State, new { @class = "form-group" })
        </div>
    </div>
        <div class="col-xs-12">
            <h4>Zipcode</h4>
            @Html.TextBoxFor(m => m.Zip, new { @class = "form-group" })
        </div>
        <hr />
        <div class="row">
            <div class="col-xs-3">
                <h4>Purchase Price</h4>
                @Html.TextBoxFor(m => m.SalePrice, new { @class = "form-group" })
            </div>
            <div class="row">
                <div class="col-xs-3">
                    <h4>Purchase Type</h4>
                    @Html.TextBoxFor(m => m.PurchaseType, new { @class = "form-group" })
                </div>
            </div>
            <div class="row col-xs-12">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
}
