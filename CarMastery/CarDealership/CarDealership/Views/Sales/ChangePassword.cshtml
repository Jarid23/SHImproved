@model CarDealership.Models.UserVM

@{
    ViewBag.Title = "ChangePassword";
}

<h2>Change Password</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3">
                <h3>Password</h3>
                @Html.PasswordFor(m => m.Password, new { @class = "form-group" })
            </div>
            <div class="col-xs-3">
                <h4>Confirm Password</h4>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-group" })
            </div>
        </div>
        <div class="row cole-xs-12">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
}

