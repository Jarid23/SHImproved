@model Superhero.Models.HeroVM

@{
    ViewBag.Title = "EditHero";
}

<h2>EditHero</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3">
                Hero Name @Html.TextBoxFor(h => h.HeroName, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                Hero Organizations @Html.TextBoxFor(h => h.Organizations, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                Hero Sightings @Html.TextBoxFor(h => h.Sightings, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                Superpower @Html.TextBoxFor(h => h.Superpower, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                Description @Html.TextAreaFor(h => h.Description, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="col-xs-3">
        <button type="submit" class="btn btn-default">Save</button>
    </div>
}
<div class="col-xs-12" id="heroarea">

</div>
